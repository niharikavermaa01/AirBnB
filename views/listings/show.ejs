<!-- review section - REVIEW FORM -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">

            <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
                <h2 class="mb-4 fw-bold text-center">Leave Your Review</h2>
                
                <!-- NOTE: The embedded JS is preserved and untouched below -->
                <form action="/listings/<%= listing.id %>/reviews" method="POST" nonvalidate class="needs-validation">
                    <div class="mb-4">
                        <label for="rating" class="form-label fs-5 fw-semibold d-block">Overall Rating</label>
                        <div class="d-flex align-items-center">
                            <input class="form-range me-3" type="range" min="1" max="5" step="1" id="rating" name="review[rating]" value="5" oninput="updateRatingValue(this.value)">
                            <span id="ratingValue" class="fw-bold fs-4 text-danger">5</span>
                            <span class="text-muted ms-1">/ 5</span>
                        </div>
                        <div class="d-flex justify-content-between small text-muted mt-1 px-1">
                            <span>Terrible (1)</span>
                            <span>Excellent (5)</span>
                        </div>
                    </div>

                    <div class="form-floating mb-4">
                        <label for="validationCustom03" class="form-label"></label>
                       <textarea type="text" class="form-control" id="validationCustom03" name="review[comment]" placeholder="Share your experience..." required style="height: 150px; resize: vertical;"></textarea>
                        <div class="invalid-feedback">Please enter the valid comment!</div> 
                    </div>
                    <button type="submit" class="btn btn-danger btn-lg w-100 rounded-3 fw-bold">Submit Review</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Placeholder function for the rating slider (required by the form HTML)
    function updateRatingValue(value) {
        document.getElementById('ratingValue').textContent = value;
    }
</script>